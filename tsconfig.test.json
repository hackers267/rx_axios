{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
